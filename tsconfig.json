{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"esModuleInterop": true,
		"allowJs": true, // 是否允许出现js
		"checkJs": true,
		"noImplicitAny": false, // 禁止隐式any类型
		"moduleResolution": "node",
		"sourceMap": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"baseUrl": ".",
		"outDir": "./",
		"paths": {
      "@/*": ["src/*"],
		},
	},
	"exclude": ["node_modules", "dist", "public", "config"],
	"compileOnSave": true
}
